mixin ticket(ticket)
  .ticket-card(class=`ticket-card--color${ticket.color}`)
    .ticket-card__img
      img(src=`${ticket.image}.jpg` srcset=`${ticket.image}@2x.jpg 2x` alt="Изображение товара")
    .ticket-card__info
      span.ticket-card__label= ticket.label
      .ticket-card__categories
        each category in ticket.categories
          a(href="#")= category
      .ticket-card__header
        h3.ticket-card__title
          a(href="#")= ticket.title
        p.ticket-card__price
          span.js-sum= ticket.price
          |  #{ticket.currency}
      .ticket-card__desc
        p= ticket.description
