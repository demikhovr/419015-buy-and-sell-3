mixin category(category, isActive, isDefault)
  a.category-tile(class=`${isActive && `category-tile--active`} ${isDefault && `category-tile--default`}` href=category.href)
    span.category-tile__image
      img(src=`${category.image}.jpg` srcset=`${category.image}@2x.jpg 2x` alt="Иконка категории")
    span.category-tile__label
      | #{category.label}&nbsp;
      span.category-tile__qty.js-qty= category.amount
